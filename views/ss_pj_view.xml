<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- PJ Kanban View  -->
        <record model="ir.ui.view" id="view_ss_pj_kanban">
            <field name="name">ss.pj.kanban</field>
            <field name="model">ss.pj</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="pj_cd"/>
                    <field name="pj_name"/>
                    <field name="pj_amount_total"/>
                    <field name="pj_state"/>
                    <field name="pj_type"/>
                    <field name="pj_cd"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <span><strong><t t-esc="record.pj_cd.value"/></strong></span>
                                    </div>
                                    <strong><field name="pj_amount_total"/></strong>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong><field name="pj_partner_id"/></strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <div>
                                            <span><strong><t t-esc="record.pj_name.value"/></strong></span>
                                        </div>
                                    </div>
                                    <div>
                                        <span><t t-esc="record.pj_type.value"/> <t t-esc="record.pj_state.value"/></span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Tree view -->
        <record id="view_ss_pj_tree" model="ir.ui.view">
            <field name="name">ss.pj.tree</field>
            <field name="model">ss.pj</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="ss_pj">
                    <field name="pj_cd" string="PJコード"/>
                    <field name="pj_name" string="PJ名"/>
                    <field name="pj_type"/>
                    <field name="pj_state"/>
                    <field name="pj_partner_cd"/>
                    <field name="pj_partner_id"/>
                    <field name="pj_bu_cd"/>
                    <field name="pj_startdate" string="PJ開始日"/>
                    <field name="pj_enddate" string="PJ予定終了日"/>
                    <field name="pj_amount_total" sum="Total Tax Included"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_ss_pj_form" model="ir.ui.view">
            <field name="name">ss.pj.form</field>
            <field name="model">ss.pj</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="ss_pj">
                    <sheet>
                        <H1>
                            <group name="Pj_cd_name" string="PJ情報">
                                <field name="pj_cd"/>
                                <field name="pj_name"/>
                            </group>
                        </H1>
                        <group col="4">
                            <field name="pj_partner_id" options="{'no_create': True}"/>
                            <field name="pj_partner_cd"/>
                            <field name="pj_bu_cd" options="{'no_create': True}"/>
                            <field name="pj_bu_name"/>
                        </group>
                        <group col="4">
                            <field name="pj_type"/>
                            <field name="pj_state"/>
                        </group>
                        <group col="4">
                            <field name="pj_startdate"/>
                            <field name="pj_enddate"/>
                            <field name="pj_user_id" />
                        </group>
                        <notebook>
                            <page string="PJ詳細">
                                <field name="pj_line" mode="tree" attrs="">
                                    <form string="PJ Lines">
                                        <group col="2">
                                            <field name="pj_cd" readonly="1"/>
                                            <field name="pj_name" readonly="1"/>
                                        </group>
                                        <group col="2">
                                            <field name="pj_member_id" style="width:35%%"/>
                                            <field name="pj_member_type" style="width:35%%"/>
                                            <field name="pj_payofftype" style="width:35%%"/>
                                            <field name="pj_price_type" style="width:35%%"/>
                                        </group>
                                        <group col="2" >
                                            <field name="pj_price_unit"  style="width:35%%"/>
                                            <field name="pj_price_purchase"  style="width:35%%"/>
                                            <field name="pj_duty_lowerlimit" style="width:35%%"/>
                                            <field name="pj_duty_upperlimit" style="width:35%%"/>
                                            <field name="pj_price_lowerlimit" style="width:35%%"/>
                                            <field name="pj_price_upperlimit" style="width:35%%"/>
                                            <field name="pj_manhour_contract" style="width:35%%"/>
                                        </group>
                                        <group col="12">
                                            <group colspan="4" style="text-align:right;">
                                                <field name="pj_amount"/>
                                                <field name="pj_cost"/>
                                            </group>
                                        </group>
                                    </form>
                                    <tree string="PJ Lines Tree" >
                                        <field name="sequence" widget="handle"/>
                                        <field name="pj_member_id"/>
                                        <field name="pj_member_type"/>
                                        <field name="pj_price_unit"/>
                                        <field name="pj_duty_lowerlimit"/>
                                        <field name="pj_duty_upperlimit"/>
                                        <field name="pj_price_lowerlimit"/>
                                        <field name="pj_price_upperlimit"/>
                                        <field name="pj_manhour_contract"/>
                                        <field name="pj_amount"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="pj_amount_total" />
                                    </div>
                                    <field name="pj_amount_total" nolabel="1" class="oe_subtotal_footer_separator" />
                                </group>
                            </page>
                            <page string="管理情報" name="manager_info">
                                <group name="Pj_date" string="pj_date">
                                    <group string="PJ 管理情報" name="pj_info">
                                        <field name="pj_register_date"/>
                                        <field name="pj_register_user_id"/>
                                        <field name="pj_permitted_date"/>
                                        <field name="pj_permitted_user_id"/>
                                    </group>
                                    <group string="PJ 検収情報" name="pj_receipt">
                                        <field name="pj_receipted_date"/>
                                        <field name="pj_receipted_user_id"/>
                                        <field name="pj_closed_date"/>
                                        <field name="pj_closed_user_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="内部注記" name="note">
                                <field name="pj_note" placeholder=""/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_ss_pj_search" model="ir.ui.view">
            <field name="name">ss.pj.search</field>
            <field name="model">ss.pj</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="BUコード">
                    <filter domain="[('pj_state','=','new')]" string="PJ新規"/>
                    <filter domain="[('pj_state','=','end')]" string="PJ終了"/>
                    <separator/>
                    <filter domain="[('pj_type','=','dispatch')]" string="派遣"/>
                    <filter domain="[('pj_type','=','contract')]" string="請負"/>
                    <filter domain="[('pj_type','=','maintaining')]" string="保守"/>
                    <separator/>
                    <field name="pj_partner_cd" />
                    <field name="pj_bu_cd" />
                    <separator/>
                    <field name="pj_type" />
                    <field name="pj_state" />
                    <group expand="0" string="Group By...">
                        <filter string="顧客" domain="[]"
                            context="{'group_by':'pj_partner_cd'}" />
                        <filter string="BUコード" domain="[]"
                            context="{'group_by':'pj_bu_cd'}" />
                        <separator/>
                        <filter string="PJ種別" domain="[]"
                            context="{'group_by':'pj_type'}" />
                        <filter string="PJ状態" domain="[]"
                            context="{'group_by':'pj_state'}" />
                    </group>
                </search>
            </field>
        </record>

        <!-- graph View -->
        <record  id="view_ss_pj_graph" model="ir.ui.view">
            <field name="name">ss.pj.graph</field>
            <field name="model">ss.pj</field>
            <field name="arch" type="xml">
                <graph string="PJ">
                    <field name="pj_bu_cd"/>
                    <field name="pj_amount_total" type="measure"/>
                </graph>
            </field>
        </record>
