<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_ss_pj_kanban" model="ir.ui.view">
            <field name="name">ss_pj.Kanban</field>
            <field name="model">ss.pj</field>
            <field name="arch" type="xml">
                <kanban class="o_ss_pj_kanban">
                    <field name="pj_id" />
                    <field name="name" />
                    <field name="pj_startdate"/>
                    <field name="pj_enddate"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click o_ss_pj_kanban">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <field name="pj_id"/>
                                        </a>
                                    </h4>
                                    <h4>
                                        <a type="open">
                                            <field name="name"/>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li>
                                            PJ開始日:
                                            <field name="pj_startdate"/>
                                            <t t-if="record.pj_enddate.value">
                                            ～
                                            <field name="pj_enddate"/>
                                            </t>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_ss_pj_tree" model="ir.ui.view">
            <field name="name">ss.pj.tree</field>
            <field name="model">ss.pj</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="ss_pj">
                    <field name="pj_id" />
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="view_ss_pj_form" model="ir.ui.view">
            <field name="name">ss.pj.form</field>
            <field name="model">ss.pj</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="ss_pj">
                    <sheet>
                        <div class="oe_title">
                            <h2>
                                【PJ台帳管理】
                            </h2>
                            <h3>
                                <group col="4" >
                                    <field name="pj_id" required="True" colspan = "1" />
                                    <field name="name"  required="True" colspan = "1"/>
                                </group>
                                <group col="4" >
                                    <field name="account_pj_date" placeholder="YYYY/MM" required="True" colspan = "1" />
                                </group>
                            </h3>
                        </div>
                        <group col="4">
                            <field name="pj_startdate"  required="True" />
                            <field name="pj_enddate"  required="True" />
                        </group>
                        <group col="4">
                            <field name="partner_id" options="{'no_create_edit': 1}"/>
                            <field name="partner_name" />
                            <field name="type" colspan="2" style="width: 40%%"/>
                            <field name="status" colspan="2" style="width: 40%%"/>
                            <field name="sales_amount" />
                        </group>

                        <notebook> 
                             <page string="PJ明細">
                                <field name="pj_sub_ids"  nolabel="1">
                                    <tree string="Tree String">
                                        <field name="id"/>
                                        <field name="name"/>
                                        <field name="employee_type"/>
                                        <field name="price_unit"/>
                                        <field name="manhour"/>
                                        <field name="excess_deduct"/>
                                        <field name="carfare"/>
                                        <field name="amount_subtotal"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_ss_pjdetail_form" model="ir.ui.view">
            <field name="name">ss.pj.detail.form</field>
                <field name="model">ss.pj.detail</field>
                <field name="arch" type="xml">
                    <form string="ss_pj_detail">
                        <sheet>
                            <group col="7">
                                <field name="pj_id" readonly="1" colspan="2"/>
                                <field name="pj_name" readonly="1" colspan="3" style="width:120%%"/>
                                <field name="pj_account_date" readonly="1" olspan="2" style="width:130%%" />
                            </group>
                            <group col="2">
                                <field name="name" style="width:30%%"/>
                                <field name="employee_type" style="width:10%%"/>
                            </group>
                              
                            <group col="4">
                                <field name="price_unit" />
                                <newline/>
                                <field name="duty_lowerlimit"/>
                                <field name="duty_upperlimit"/>
                                <field name="price_base"/>
                                <field name="price_upperlimit"/>
                                <field name="manhour"/>
                                <field name="hours"/>
                                <field name="hours_lowerlimit"/>
                                <field name="hours_upperlimit"/>
                                <field name="payoffhour"/>
                            </group>
                            
                            <group col="12">
                                <group colspan="4">
                                    <field name="payoffhour"/>
                                    <field name="excess_deduct"/>
                                    <separator/>
                                    <field name="carfare"/>
                                    <separator/>
                                    <field name="amount_subtotal"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
        </record>


        <record id="view_ss_pj_search" model="ir.ui.view">
            <field name="name">ss.pj.search</field>
            <field name="model">ss.pj</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="PJ">
                    <field name="name" />
                    <field name="pj_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Evaluation Type" domain="[]"
                            context="{'group_by':'evaluation_type'}" />
                        <filter string="pj" domain="[]"
                            context="{'group_by':'pj_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_ss_pj_view">
            <field name="name">ss pj</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ss.pj</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_ss_pj_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_ss_pj_view_form">
            <field name="act_window_id" ref="act_ss_pj_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ss_pj_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_ss_pj_view_tree">
            <field name="act_window_id" ref="act_ss_pj_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ss_pj_tree" />
        </record>
        <record model="ir.actions.act_window.view" id="act_ss_pj_view_kanban">
            <field name="act_window_id" ref="act_ss_pj_view"/>
            <field name="sequence" eval="5"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_ss_pj_kanban"/>
        </record>
    </data>
</odoo>
