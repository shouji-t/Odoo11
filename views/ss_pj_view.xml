<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_ss_pj_tree" model="ir.ui.view">
            <field name="name">ss.pj.tree</field>
            <field name="model">ss.pj</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="ss_pj">
                    <field name="name" />
                    <field name="pj_id" />
                </tree>
            </field>
        </record>
        <record id="view_ss_pj_form" model="ir.ui.view">
            <field name="name">ss.pj.form</field>
            <field name="model">ss.pj</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="ss_pj">
                    <sheet>
                        <group col="7">
                            <field name="pj_id" placeholder="PJ ID" required="True" colspan="2"/>
                            <field name="name" placeholder="PJ Name" required="True" colspan="3" style="width:120%%"/> 
                            <field name="account_pj_date" placeholder="YYYY/MM" required="True" colspan="2" style="width:130%%" />
                        </group>
                        <group col="5">
                            <field name="partner_id" colspan="3"/>
                            <field name="type" colspan="2" style="width: 40%%"/>
                            <field name="partner_id" colspan="3" style="width: 70%%"/>
                            <field name="status" colspan="2" style="width: 40%%"/>
                            <field name="sales_amount" colspan="3" style="width: 70%%"/>
                        </group>
                      
                        <notebook> 
                             <page string="Pj sub IDs">
                                <field name="pj_sub_ids">
                                    <tree string="Tree String">
                                        <field name="id"/>
                                        <field name="name"/>
                                        <field name="employee_type"/>
                                        <field name="price_unit"/>
                                        <field name="manhour"/>
                                        <field name="excess_deduct"/>
                                        <field name="carfare"/>
                                        <field name="amount_subtotal"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_ss_pjdetail_form" model="ir.ui.view">
            <field name="name">ss.pj.detail.form</field>
                <field name="model">ss.pj.detail</field>
                <field name="arch" type="xml">
                    <form string="ss_pj_detail">
                        <sheet>
                            <group col="7">
                                <field name="pj_id" readonly="1" colspan="2"/>
                                <field name="pj_name" readonly="1" colspan="3" style="width:120%%"/>
                                <field name="pj_account_date" readonly="1" olspan="2" style="width:130%%" />
                            </group>
                            <group col="2">
                                <field name="name" style="width:30%%"/>
                                <field name="employee_type" style="width:10%%"/>
                            </group>
                              
                            <group col="4">
                                <field name="price_unit" />
                                <newline/>
                                <field name="duty_lowerlimit"/>
                                <field name="duty_upperlimit"/>
                                <field name="price_base"/>
                                <field name="price_upperlimit"/>
                                <field name="manhour"/>
                                <field name="hours"/>
                                <field name="hours_lowerlimit"/>
                                <field name="hours_upperlimit"/>
                                <field name="payoffhour"/>
                            </group>
                            
                            <group col="12">
                                <group colspan="4">
                                    <field name="payoffhour"/>
                                    <field name="excess_deduct"/>
                                    <separator/>
                                    <field name="carfare"/>
                                    <separator/>
                                    <field name="amount_subtotal"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
        </record>


        <record id="view_ss_pj_search" model="ir.ui.view">
            <field name="name">ss.pj.search</field>
            <field name="model">ss.pj</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="PJ">
                    <field name="name" />
                    <field name="pj_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Evaluation Type" domain="[]"
                            context="{'group_by':'evaluation_type'}" />
                        <filter string="pj" domain="[]"
                            context="{'group_by':'pj_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_ss_pj_view">
            <field name="name">ss pj</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ss.pj</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ss_pj_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_ss_pj_view_form">
            <field name="act_window_id" ref="act_ss_pj_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ss_pj_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_ss_pj_view_tree">
            <field name="act_window_id" ref="act_ss_pj_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ss_pj_tree" />
        </record>
    </data>
</odoo>
