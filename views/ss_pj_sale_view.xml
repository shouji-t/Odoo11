<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_ss_pj_form" model="ir.ui.view">
            <field name="name">ss.pj.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <!-- sale.orderフォーム -->
                <xpath expr="//div//field[@name='name']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//div//field[@name='name']" position="after">
                    <div class="oe_edit_only"><label for="pj_id" /></div>
                    <field name="pj_id"/><br/>
                    <div class="oe_edit_only"><label for="pj_name"/></div>
                    <field name="pj_name"/>
                </xpath>

                <!-- sale.orderフォームにPJフィールドを追加する -->
                <xpath expr="//field[@name='partner_id']" position="before">
                    <label for="pj_account_date" class="oe_read_only" />
                    <field name="pj_account_date" style="width: 60%%" class="oe_read_only" nolabel="1"/>
                    <label for="pj_long_date" class="oe_edit_only" />
                    <field name="pj_long_date" style="width: 60%%" class="oe_edit_only" nolabel="1"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="x_partner_cd"/>
                    <field name="pj_bu_name"/>
                    <field name="pj_bu_cd"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']/../.." position="after">
                    <group col="4">
                        <field name="pj_startdate" colspan="2"/>
                        <field name="pj_enddate" colspan="2"/>
                    </group>
                </xpath>

                <xpath expr="//field[@name='validity_date']" position="before">
                    <field name="pj_state" style="width: 30%%"/>
                    <field name="pj_type" style="width: 30%%"/>
                </xpath>

                <!-- validity_dateを隠す -->
                <xpath expr="//field[@name='validity_date']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>

                <!-- 支払条件を隠す -->
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                     <attribute name="invisible">1</attribute>
                </xpath>

                <!-- order.lineフォームにフィールドを渡す -->
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="context">{'default_pj_id': pj_id,
                                            'default_pj_name': pj_name,
                                            'default_pj_account_date': pj_account_date}
                    </attribute>
                </xpath>

                <!-- order.line form -->
                <!-- 使わないフィールドを隠す -->
                <xpath expr="//notebook//group" position="attributes">
                    <attribute name="style">display: none;</attribute>
                </xpath>
                 <xpath expr="//notebook//field[@name='order_line']/form//label[@for='name']" position="replace">
                </xpath>
                <xpath expr="//notebook//field[@name='order_line']/form//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//notebook//form/div" position="attributes">
                    <attribute name="style">display: none;</attribute>
                </xpath>

                <!-- PJフィールドを追加する -->
                <xpath expr="//notebook//field[@name='order_line']/form" position="inside">
                    <group col="7">
                        <field name="pj_id" readonly="1" colspan="2"/>
                        <field name="pj_name" readonly="1" colspan="3" style="width:120%%"/>
                        <field name="pj_account_date" readonly="1" colspan="2" style="width:140%%" />
                    </group>
                    <group col="2">
                        <field name="pj_member_id" style="width:30%%"/>
                        <field name="pj_member_type" style="width:10%%"/>
                    </group>

                    <group col="12">
                        <group colspan="4" style="text-align:right;">
                            <field name="pj_price_unit" />
                            <field name="pj_duty_lowerlimit"/>
                            <field name="pj_duty_upperlimit"/>
                            <field name="pj_price_lowerlimit"/>
                            <field name="pj_price_upperlimit"/>
                        </group>
                        <group colspan="4" style="text-align:right;">
                            <field name="pj_manhour"/>
                            <field name="pj_duty_hours"/>
                            <field name="pj_hours_lowerlimit"/>
                            <field name="pj_hours_upperlimit"/>
                            <field name="pj_payoffhour"/>
                        </group>
                    </group>

                    <group col="12">
                        <group colspan="4" style="text-align:right;">
                            <field name="pj_amount"/>
                            <field name="pj_excess_deduct"/>
                            <field name="pj_subtotal"/>
                            <separator/>
                            <field name="pj_carfare"/>
                            <separator/>
                            <field name="pj_amount_subtotal"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//notebook/page" position="attributes">
                    <attribute name="string">PJ明細</attribute>
                </xpath>
                <xpath expr="//notebook/page/field" position="attributes">
                    <attribute name="string"> PJ明細</attribute>
                </xpath>


                <!-- order.line tree -->
                <!-- ツリーで編集しないで、フォームを開く -->
                <xpath expr="//notebook//tree" position="attributes">
                    <attribute name="editable"></attribute>
                </xpath>

                <!-- 使わないフィールドを隠す -->
                <xpath expr="//tree//field[@name='product_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='layout_category_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='product_uom_qty']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='qty_delivered']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='qty_invoiced']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='product_uom']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='analytic_tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='price_unit']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='tax_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='discount']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='price_subtotal']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree//field[@name='price_total']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- PJフィールドを追加する -->
                <xpath expr="//notebook//tree//field[@name='sequence']" position="after">
                    <field name="pj_member_id"/>
                    <field name="pj_member_type"/>
                    <field name="pj_price_unit"/>
                    <field name="pj_manhour"/>
                    <field name="pj_excess_deduct"/>
                    <field name="pj_carfare"/>
                    <field name="pj_amount_subtotal"/>
                </xpath>
            </field>
        </record>

        <record id="view_ss_pj_search" model="ir.ui.view">
            <field name="name">ss.pj.search</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="PJ">
                    <field name="name" />
                    <field name="pj_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Evaluation Type" domain="[]"
                            context="{'group_by':'evaluation_type'}" />
                        <filter string="pj" domain="[]"
                            context="{'group_by':'pj_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="view_ss_order_tree" model="ir.ui.view">
            <field name="name">ss.pj.tree</field>
            <field name="model">sale.order</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
            <tree string="Sales Orders" decoration-bf="message_needaction==True" decoration-muted="state=='cancel'">
                    <field name="message_needaction" invisible="1"/>
                    <field name="pj_id" string="PJコード"/>
                    <field name="pj_name" string="PJ名"/>
                    <field name="pj_account_date" string="経理年月"/>
                    <field name="pj_state" string="PJ Status"/>
                    <field name="pj_startdate" string="PJ開始日"/>
                    <field name="pj_enddate" string="PJ予定終了日"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="amount_total" sum="Total Tax Included" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="invoice_status" invisible="1"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_ss_pj_view">
            <field name="name">PJ登録</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ss_pj_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_ss_pj_view_form">
            <field name="act_window_id" ref="act_ss_pj_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ss_pj_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_ss_pj_view_tree">
            <field name="act_window_id" ref="act_ss_pj_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ss_order_tree" />
        </record>
    </data>
</odoo>
